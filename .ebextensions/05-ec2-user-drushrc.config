files:
  "/home/ec2-user/.drush/drushrc.php":
    mode: "000600"
    owner: "ec2-user"
    group: "ec2-user"
    content: |
      <?php
      // Drupal core base directory
      $options['r'] = '/var/www/html';
    encoding: "plain"

commands:
  fix_path:
    command: sed -i '/^export PATH/i PATH=/opt/drush:$PATH' /home/ec2-user/.bash_profile

